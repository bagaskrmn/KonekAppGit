<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.dashboard.home.crops.adminandahlitanicrops.AhliTaniAndAdminCropsActivity">

    <!--    ActionBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >
        <ImageView
            android:id="@+id/backAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_back_action"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Data Monitoring"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:fontFamily="@font/outfit_bold"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komoditi yang Ditanam"
            android:fontFamily="@font/outfit_semi_bold"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/crops"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/commodityAhliTaniCrops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cabai"
        android:fontFamily="@font/outfit_bold"
        android:textColor="@color/neutral_dark3"
        android:textSize="30sp"
        android:layout_marginBottom="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_btn_crops"
        android:clickable="false"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutAhliTaniCrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            android:background="@android:color/transparent"
            app:tabBackground="@drawable/tab_indicator_crops"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorAnimationMode="elastic"
            android:layout_margin="8dp"
            app:tabIndicatorHeight="0dp">
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/neutral"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_semi_bold"
            android:text="Mitra"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_semi_bold"
            android:text="Periode"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/outfit_semi_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="12dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerAhliTaniCrops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>