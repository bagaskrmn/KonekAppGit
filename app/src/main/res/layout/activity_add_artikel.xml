<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.AddArtikelActivity"
    >

    <!--    add artikel action bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/addArtikelBackAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Artikel"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:gravity="center"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Artikel"
                android:fontFamily="@font/outfit_semi_bold"
                android:textColor="@color/neutral_dark3"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                />

            <EditText
                android:id="@+id/addTitleArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini judul"
                android:layout_marginBottom="10dp"
                android:inputType="textCapWords"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumber Artikel"
                android:fontFamily="@font/outfit_semi_bold"
                android:textColor="@color/neutral_dark3"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                />

            <EditText
                android:id="@+id/addSourceArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini Sumber"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar Artikel"
                android:fontFamily="@font/outfit_semi_bold"
                android:textColor="@color/neutral_dark3"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                />

            <ImageView
                android:id="@+id/addImageArtikel"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Artikel"
                android:fontFamily="@font/outfit_semi_bold"
                android:textColor="@color/neutral_dark3"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                />


            <EditText
                android:id="@+id/addDescriptionArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini Deskripsi"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="8"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/btnAddArtikelDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="Tambah"
                android:fontFamily="@font/outfit_semi_bold"
                android:textAllCaps="false"
                />

        </LinearLayout>


    </ScrollView>


</LinearLayout>