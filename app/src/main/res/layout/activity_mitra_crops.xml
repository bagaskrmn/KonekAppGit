<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.dashboard.home.crops.MitraCropsActivity">

    <!--    ActionBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/mitraCropsBackAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_back_action"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Monitoring"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:fontFamily="@font/outfit_bold"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lengkapi Data Anda"
                android:fontFamily="@font/outfit_bold"
                android:textColor="@color/neutral_dark3"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi data penanaman anda dengan benar untuk evaluasi oleh Ahli Tani "
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/neutral_dark4"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"
                />
            <!--Komoditi-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Komoditi yang Ditanam"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/crops"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsCommodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Kentang"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Periode-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periode Penanaman"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/note"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Periode Pertama / Kedua"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Penanaman"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/calendar"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Tanggal mulai penanaman"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Qty-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Bibit yang Ditanam"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/crops_qty"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="500"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Location-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Lahan Penanaman"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/location"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Lereng Gunung Merbabu"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Fertilizer-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penggunaan Pupuk"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/organic"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsFertilizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Kimia / Organik"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Result-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasil Perkiraan Panen"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/calculator"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    />

                <EditText
                    android:id="@+id/CropsResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:hint="Perkiraan Hasil Panen Periode Tanam"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <!--Notes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan Selama Penanaman"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <EditText
                    android:id="@+id/addDescriptionArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:lines="8"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark3"
                    android:paddingTop="10dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="14sp"
                    android:hint="Perkiraan Hasil Panen Periode Tanam"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnMitraCropsDone"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="Simpan"
                android:fontFamily="@font/outfit_semi_bold"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>