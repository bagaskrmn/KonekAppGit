<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            >
            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@tools:sample/avatars"
                android:layout_marginRight="12dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/titleNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Judul Notifikasi"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp"
                    />

                <TextView
                    android:id="@+id/descriptionNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/neutral_dark4"
                    android:textSize="16sp"
                    tools:text="Deskripsi notifikasi" />

                <TextView
                    android:id="@+id/dateNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="date notification"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/neutral_dark4"
                    android:textSize="14sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/neutral"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>