<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.dashboard.home.crops.AhliTaniCropsActivity">

    <!--    ActionBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/backAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_back_action"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Data Monitoring"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:fontFamily="@font/outfit_bold"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komoditi yang Ditanam"
            android:fontFamily="@font/outfit_semi_bold"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/crops"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/commodityAhliTaniCrops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cabai"
        android:fontFamily="@font/outfit_bold"
        android:textColor="@color/neutral_dark3"
        android:textSize="30sp"
        android:layout_marginBottom="12dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutAhliTaniCrops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerAhliTaniCrops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>