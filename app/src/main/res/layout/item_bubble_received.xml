<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp"
    android:layout_marginVertical="4dp"
    android:orientation="vertical">

    <include
        android:id="@+id/linear_item_bubble_time"
        android:visibility="gone"
        tools:visibility="visible"
        layout="@layout/item_bubble_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:background="@drawable/bg_bubble_receiver">

            <TextView
                android:id="@+id/tvReceivedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingHorizontal="16dp"
                tools:text="Selamat Siang Pak  Agus Wibowo, sebelumnya perkenalkan saya Andro, Petani mitra konek dari Semarang"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/outfit_regular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:id="@+id/icCheckReadReceiver"-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@drawable/ic_check_read"-->
<!--                    app:tint="@color/neutral_dark" />-->


                <TextView
                    android:id="@+id/tvReceivedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    tools:text="12:00 AM"
                    android:textColor="@color/neutral_light"
                    android:textSize="12sp"
                    android:fontFamily="@font/outfit_regular" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.25" />

    </LinearLayout>

</LinearLayout>