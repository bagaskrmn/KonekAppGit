<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".activity.AddPenyakitActivity">

    <!--    add artikel action bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/addPenyakitBackAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tambah Penyakit"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:gravity="center"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Penyakit"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/outfit_semi_bold"
        android:textColor="@color/neutral_dark3"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/addNamePenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/outfit_regular"
        android:textSize="14sp"
        android:padding="8dp"
        tools:text="Ini Nama Penyakit"
        android:layout_marginBottom="10dp"
        android:inputType="textCapWords"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gambar"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/outfit_semi_bold"
        android:textColor="@color/neutral_dark3"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/addImagePenyakit"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Penyakit"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/outfit_semi_bold"
        android:textColor="@color/neutral_dark3"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/addDescriptionPenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/outfit_regular"
        android:textSize="14sp"
        android:padding="8dp"
        tools:text="Ini Deskripsi"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:lines="8"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btnAddPenyakitDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:text="Tambah"
        android:fontFamily="@font/outfit_semi_bold"
        android:textAllCaps="false"
        />



</LinearLayout>