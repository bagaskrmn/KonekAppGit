<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/detailObatImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/detailObatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Ini Name Artikeljiefjesifjdsjfnsdjkfnrnfrnfrsrfnfnrrffnrfnrfn fnrfurnfrufnrufn"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/neutral_dark3"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            />


        <TextView
            android:id="@+id/detailObatDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ini isi/deskripsi artikel"
            android:textSize="14sp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/neutral_dark4"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>