<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageArtikel"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/titleArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ini judul artikel"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/neutral_dark3"
            android:textSize="16sp"
            android:layout_margin="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:id="@+id/sourceArtikel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="surabaya.net"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/neutral_dark"
                android:textSize="10sp"
                />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_home"
                />

            <TextView
                android:id="@+id/dateArtikel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="8 Desember 2018"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/neutral_dark"
                android:textSize="10sp"
                android:gravity="end"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>