<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.EditArtikelActivity">

    <!--    edit artikel action bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/editArtikelBackAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_back_action"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ubah Artikel"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/neutral_dark3"
            android:textSize="18sp"
            android:gravity="center"
            />
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editImageArtikelConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_add_image"
                >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/document_upload"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/editImageArtikel"
                    app:layout_constraintStart_toStartOf="@+id/editImageArtikel"
                    app:layout_constraintTop_toTopOf="@+id/editImageArtikel" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="Unggah Foto"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="@+id/editImageArtikel"
                    app:layout_constraintStart_toStartOf="@+id/editImageArtikel"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11" />

                <ImageView
                    android:id="@+id/editImageArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumber Gambar Artikel"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/editSourceImageArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini Sumber Gambar"
                android:layout_marginBottom="10dp"
                android:inputType="textCapWords"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Artikel"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/editTitleArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini judul"
                android:layout_marginBottom="10dp"
                android:inputType="textCapWords"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumber Artikel"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/editSourceArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini Sumber"
                android:inputType="text"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Artikel"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/neutral_dark3"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="#D8244E"
                    android:text="*"
                    />

            </LinearLayout>


            <EditText
                android:id="@+id/editDescriptionArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:padding="8dp"
                tools:text="Ini Deskripsi"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="8"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btnEditArtikelDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="SELESAI"
                android:fontFamily="@font/outfit_semi_bold"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>