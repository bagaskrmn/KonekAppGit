<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >

            <TextView
                android:id="@+id/commodityCropsMitraList"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_semi_bold"
                android:maxLines="1"
                android:textColor="@color/neutral_dark3"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                tools:text="Kentang" />

            <TextView
                android:id="@+id/periodCropsMitraList"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_semi_bold"
                android:maxLines="1"
                android:textColor="@color/neutral_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commodityCropsMitraList"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                tools:text="Pertama" />

            <TextView
                android:id="@+id/dateCropsMitraList"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_semi_bold"
                android:maxLines="1"
                android:textColor="@color/neutral_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/periodCropsMitraList"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                tools:text="06-12-22" />

            <Button
                android:id="@+id/btnDetailCropsMitraList"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_btn_crops"
                android:backgroundTint="@null"
                android:fontFamily="@font/outfit_semi_bold"
                android:text="Detail"
                android:textAllCaps="false"
                android:textColor="@color/neutral_dark3"
                android:textSize="12sp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/neutral"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>